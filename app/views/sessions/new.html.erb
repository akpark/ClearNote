<div class="sign-in">
  <h1>Sign in</h1>

  <form class="sign-in-form" action="<%= session_url %>" method="post">
    <%= auth_token_input %>

    <div class="input">
      <label for="username">Email address or username</label>
      <input id="username" type="text" name="user[username]" value="<%=@user.username%>">
    </div>

    <div class="input">
      <label for="password">Password</label>
      <input id="password" type="password" name="user[password]" value="<%=@user.password%>">
    </div>

    <button>Sign In</button>

  </form>
  <!-- Forgot password? -->

  <div class="create-account-question">Don't have an account?</div>
  <a class="create-account-link" href="/users/new">Create Account</a>

</div>
